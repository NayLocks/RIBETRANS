{% extends 'base.html.twig' %}

{% block title %}Liste des Sociétés{% endblock %}
{% block pageTitle %}RibéTrans > Liste des Sociétés{% endblock %}

{% block stylesheets %}
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.css">
  <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.js"></script>
  <script type="text/javascript" charset="utf8" src="{{ asset('js/dataTable.js') }}"></script>
{% endblock %}



{% block body %}
  <div class="container-fluid">
    <div class="row clearfix">
      <div class="col-lg-12">
        <div class="card">
          <div class="table-responsive">
            <table id="vehiculeTable" class="table table-hover product_item_list c_table theme-color">
              <thead>
              <tr style="text-align: center">
                <th>SOCIETE</th>
                <th>REPRESENTANT</th>
                <th>TITRE</th>
                <th>ADRESSE</th>
                <th>COMPLEMENT ADRESSE</th>
                <th>CODE POSTAL</th>
                <th>VILLE</th>
                <th>SIRET</th>
              </tr>
              </thead>
              <tbody>
              {% for company in companies %}
                <tr>
                  <td style="white-space: normal">{{ company.name }}</td>
                  <td style="white-space: normal">{{ company.title }} {{ company.director }}</td>
                  <td style="white-space: normal">{{ company.wording }} </td>
                  <td style="white-space: normal">{{ company.street }}</td>
                  <td style="white-space: normal">{{ company.streetSupplement }}</td>
                  <td style="white-space: normal">{{ company.postalCode }}</td>
                  <td style="white-space: normal">{{ company.city }}</td>
                  <td style="white-space: normal">{{ company.siret }}</td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
{% endblock %}